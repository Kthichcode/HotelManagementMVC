@using BusinessObjects.Enums
@model List<BusinessObjects.Entities.Booking>

@{
    ViewData["Title"] = "Quản Lý Đặt Phòng";
}

<div class="container mt-4">
    <h2>Quản Lý Đặt Phòng</h2>

    <!-- Phần Lọc -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Ngày Nhận Phòng</label>
                    <input type="date" name="date" class="form-control" value="@ViewBag.SelectedDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng Thái</label>
                    <select name="status" class="form-select">
                        <option value="">-- Tất Cả Trạng Thái --</option>
                        @foreach (var s in Enum.GetValues(typeof(BookingStatus)))
                        {
                            <option value="@s" selected="@(ViewBag.SelectedStatus != null && (BookingStatus)ViewBag.SelectedStatus == (BookingStatus)s)">@s</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Lọc</button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-secondary w-100">Đặt lại</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bảng Đặt Phòng -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">#ID</th>
                        <th>Khách Hàng</th>
                        <th>Phòng</th>
                        <th>Ngày Nhận Phòng</th>
                        <th>Ngày Trả Phòng</th>
                        <th>Tổng Số Tiền</th>
                        <th>Trạng Thái</th>
                        <th class="text-end pe-4">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var b in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@b.Id</td>
                                <td>
                                    @if (b.Customer != null)
                                    {
                                        <div>@b.Customer.FullName</div>
                                        <small class="text-muted">@b.Customer.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có thông tin</span>
                                    }
                                </td>
                                <td>
                                    @foreach (var br in b.BookingRooms)
                                    {
                                        <span class="badge bg-secondary">@br.Room.RoomNumber</span>
                                    }
                                </td>
                                <td>@b.CheckInDate.ToString("dd/MM/yyyy")</td>
                                <td>@b.CheckOutDate.ToString("dd/MM/yyyy")</td>
                                <td>@b.TotalAmount.ToString("N0") VND</td>
                                <td>
                                    @if (b.Status == BookingStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Đang Chờ</span>
                                    }
                                    else if (b.Status == BookingStatus.Confirmed)
                                    {

                                        <span class="badge bg-primary">Đã Xác Nhận</span>
                                    }
                                    else if (b.Status == BookingStatus.CheckedIn)
                                    {

                                        <span class="badge bg-info text-dark">Đã Nhận Phòng</span>
                                    }
                                    else if (b.Status == BookingStatus.Completed)
                                    {

                                        <span class="badge bg-success">Hoàn Thành</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-danger">Đã Hủy</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@b.Id" class="btn btn-sm btn-outline-primary">Chi Tiết</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">Không có đặt phòng nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
