@using BusinessObjects.Enums
@model BusinessObjects.Entities.Booking

@{
    ViewData["Title"] = $"Booking #{Model.Id}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Booking Details #@Model.Id</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row">
        <!-- Main Info -->
        <div class="col-md-8">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Booking Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@GetStatusColor(Model.Status) fs-6">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">Check-In</dt>
                        <dd class="col-sm-8">@Model.CheckInDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Check-Out</dt>
                        <dd class="col-sm-8">@Model.CheckOutDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8 fw-bold text-success">@Model.TotalAmount.ToString("N0") VND</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                    </dl>
                </div>
            </div>

            <!-- Customer Info -->
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    @if (Model.Customer != null)
                    {
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@Model.Customer.FullName</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Customer.Email</dd>

                            <dt class="col-sm-4">Username</dt>
                            <dd class="col-sm-8">@Model.Customer.UserName</dd>
                        </dl>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Customer information not available.</p>
                    }
                </div>
            </div>

            <!-- Rooms -->
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Rooms</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Room Number</th>
                                <th>Type</th>
                                <th>Price/Night</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var br in Model.BookingRooms)
                            {
                                <tr>
                                    <td>@br.Room.RoomNumber</td>
                                    <td>@(br.Room.RoomType?.Name ?? "N/A")</td>
                                    <td>@(br.Room.RoomType?.PricePerNight.ToString("N0")) VND</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Actions Sidebar -->
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body d-grid gap-2">
                    
                    @if (Model.Status == BookingStatus.Pending)
                    {
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@BookingStatus.Confirmed" />
                            <button type="submit" class="btn btn-success w-100 mb-2">Confirm Booking</button>
                        </form>
                        
                        <form asp-action="UpdateStatus" method="post" onsubmit="return confirm('Cancel this booking?');">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@BookingStatus.Cancelled" />
                            <button type="submit" class="btn btn-outline-danger w-100">Cancel Booking</button>
                        </form>
                    }
                    else if (Model.Status == BookingStatus.Confirmed)
                    {
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@BookingStatus.CheckedIn" />
                            <button type="submit" class="btn btn-success w-100 mb-2">Check In Guest</button>
                        </form>

                        <form asp-action="UpdateStatus" method="post" onsubmit="return confirm('Cancel this booking?');">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@BookingStatus.Cancelled" />
                            <button type="submit" class="btn btn-outline-danger w-100">Cancel Booking</button>
                        </form>
                    }
                    else if (Model.Status == BookingStatus.CheckedIn)
                    {
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@BookingStatus.Completed" />
                            <button type="submit" class="btn btn-success w-100 mb-2">Check Out (Complete)</button>
                        </form>
                    }
                    else if (Model.Status == BookingStatus.Completed)
                    {
                        <div class="alert alert-success text-center">
                            Booking Completed
                        </div>
                    }
                    else if (Model.Status == BookingStatus.Cancelled)
                    {
                        <div class="alert alert-danger text-center">
                            Booking Cancelled
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusColor(BookingStatus status)
    {
        return status switch
        {
            BookingStatus.Pending => "warning text-dark",
            BookingStatus.Confirmed => "primary",
            BookingStatus.CheckedIn => "info text-dark",
            BookingStatus.Completed => "success",
            BookingStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }
}
