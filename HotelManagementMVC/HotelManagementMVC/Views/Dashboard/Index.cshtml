@model HotelManagementMVC.Models.DashboardViewModel

@{
    ViewData["Title"] = "Bảng Điều Khiển & Báo Cáo";
}

<!-- Tiêu Đề Bảng Điều Khiển -->
<div class="dashboard-header-square mb-4">
    <h2><i class="fas fa-chart-line"></i> Bảng Điều Khiển & Báo Cáo</h2>
    <p class="mb-0">Chào mừng bạn đến với bảng điều khiển quản lý</p>
</div>

<!-- Thẻ Thống Kê -->
<div class="row g-4 mb-4">
    <!-- Thẻ Phòng -->
    <div class="col-xl-3 col-md-6">
        <div class="dashboard-card-square bg-primary text-white">
            <div class="card-header-square">
                <i class="fas fa-door-open"></i> Phòng
            </div>
            <div class="card-body-square">
                <h3 class="mb-3">Tổng: @Model.TotalRooms</h3>
                <div class="stats-detail">
                    Sẵn Có: @Model.AvailableRooms<br />
                    Bảo Trì: @Model.MaintenanceRooms
                </div>
            </div>
        </div>
    </div>

    <!-- Thẻ Đặt Phòng -->
    <div class="col-xl-3 col-md-6">
        <div class="dashboard-card-square bg-success text-white">
            <div class="card-header-square">
                <i class="fas fa-calendar-check"></i> Đặt Phòng
            </div>
            <div class="card-body-square">
                <h3 class="mb-3">Hôm Nay: @Model.BookingsToday</h3>
                <div class="stats-detail">
                    Tháng Này: @Model.BookingsThisMonth
                </div>
            </div>
        </div>
    </div>

    <!-- Thẻ Doanh Thu -->
    <div class="col-xl-3 col-md-6">
        <div class="dashboard-card-square bg-info text-white">
            <div class="card-header-square">
                <i class="fas fa-money-bill-wave"></i> Doanh Thu (Đã Thanh Toán)
            </div>
            <div class="card-body-square">
                <h3 class="mb-3">Hôm Nay: @Model.RevenueToday.ToString("N0")đ</h3>
                <div class="stats-detail">
                    Tháng: @Model.RevenueThisMonth.ToString("N0")đ
                </div>
            </div>
        </div>
    </div>

    <!-- Thẻ Hệ Thống -->
    <div class="col-xl-3 col-md-6">
        <div class="dashboard-card-square bg-light">
            <div class="card-header-square">
                <i class="fas fa-server"></i> Hệ Thống
            </div>
            <div class="card-body-square">
                <h3 class="mb-3">
                    <span class="badge bg-success">Hoạt Động</span>
                </h3>
                <div class="stats-detail text-dark">
                    Ngày: @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Phần Dưới -->
<div class="row g-4">
    <!-- Bảng Các Loại Phòng Đặt Nhiều Nhất -->
    <div class="col-lg-6">
        <div class="dashboard-table-card">
            <div class="table-card-header">
                <h5><i class="fas fa-trophy"></i> 5 Loại Phòng Được Đặt Nhiều Nhất</h5>
            </div>
            <div class="table-card-body">
                @if (Model.TopRoomTypes != null && Model.TopRoomTypes.Any())
                {
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="80">Hạng</th>
                                <th>Loại Phòng</th>
                                <th width="120" class="text-center">Đặt Phòng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var item in Model.TopRoomTypes)
                            {
                                <tr>
                                    <td><strong>@(rank++)</strong></td>
                                    <td>@item.RoomTypeName</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@item.BookingCount</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        Chưa có dữ liệu đặt phòng.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Thông Báo Quản Trị -->
    <div class="col-lg-6">
        <div class="dashboard-table-card">
            <div class="table-card-header">
                <h5><i class="fas fa-bell"></i> Thông Báo Quản Trị</h5>
            </div>
            <div class="table-card-body">
                <div class="admin-notice-square mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-info-circle text-primary me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Chào Mừng</h6>
                            <p class="mb-0 small text-muted">Chào mừng bạn đến với bảng điều khiển quản lý. Các chỉ số được cập nhật theo thời gian thực.</p>
                        </div>
                    </div>
                </div>

                <div class="admin-notice-square mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-chart-line text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Hiệu Suất</h6>
                            <p class="mb-0 small text-muted">@Model.BookingsToday bookings đã được xử lý hôm nay</p>
                        </div>
                    </div>
                </div>

                <div class="admin-notice-square">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-door-open text-info me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Tình Trạng Phòng</h6>
                            <p class="mb-0 small text-muted">@Model.AvailableRooms phòng hiện đang có sẵn</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
