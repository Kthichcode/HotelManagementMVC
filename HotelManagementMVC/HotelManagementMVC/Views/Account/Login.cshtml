@model HotelManagementMVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="auth-split-screen">
                    <!-- BÊN TRÁI - Nội dung quảng cáo -->
                    <div class="auth-left">
                        <div class="auth-left-content">
                            <h2>Chào Mừng Trở Lại!</h2>
                            <p>Đăng nhập để truy cập tài khoản và tiếp tục hành trình của bạn cùng chúng tôi</p>

                            <ul class="feature-list">
                                <li>Quản lý đặt phòng của bạn</li>
                                <li>Theo dõi trạng thái đặt phòng</li>
                                <li>Truy cập các ưu đãi độc quyền</li>
                                <li>Đặt lại nhanh chóng</li>
                                <li>Cập nhật sở thích của bạn</li>
                            </ul>

                            <div class="mt-5">
                                <p class="mb-2"><strong>Chưa có tài khoản?</strong></p>
                                <a asp-action="Register" class="btn btn-outline-light btn-lg">
                                    Tạo Tài Khoản
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- BÊN PHẢI - Mẫu Đăng Nhập -->
                    <div class="auth-right">
                        <h3>Đăng Nhập</h3>
                        <p class="subtitle">Nhập thông tin đăng nhập của bạn để truy cập tài khoản</p>

                        <form method="post" class="auth-form">


                            <div class="form-group">
                                <label asp-for="Username">Tên Người Dùng</label>
                                <input type="text" asp-for="Username" class="form-control" placeholder="Nhập tên người dùng của bạn" />
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Mật khẩu</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Nhập mật khẩu của bạn" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                        <label class="form-check-label" asp-for="RememberMe">
                                            Ghi Nhớ Tôi
                                        </label>
                                    </div>
                                    <a href="#" class="text-decoration-none small">Quên Mật Khẩu?</a>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-auth">
                                Đăng Nhập
                            </button>

                            <div class="auth-footer">
                                Chưa có tài khoản?
                                <a asp-action="Register">Tạo tài khoản ngay</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
