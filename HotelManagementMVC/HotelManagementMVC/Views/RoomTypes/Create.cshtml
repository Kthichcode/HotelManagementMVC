@model HotelManagementMVC.Models.RoomTypeFormViewModel

@{
    ViewData["Title"] = "Create Room Type";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-plus-circle"></i> Create New Room Type
            </h4>
        </div>
        
        <form method="post" class="needs-validation" novalidate>
            <div class="card-body">
                <div class="alert alert-info border-0">
                    <i class="fas fa-info-circle"></i>
                    <strong>Information:</strong> Fill in the details below to create a new room type for your hotel.
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="fas fa-tag"></i> Room Type Name <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g., Deluxe Suite, Standard Room, VIP Room" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <small class="text-muted">Enter a descriptive name for this room type</small>
                </div>

                <div class="mb-3">
                    <label asp-for="PricePerNight" class="form-label fw-bold">
                        <i class="fas fa-dollar-sign"></i> Price Per Night (VND) <span class="text-danger">*</span>
                    </label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text">đ</span>
                        <input asp-for="PricePerNight" class="form-control" type="number" step="1000" min="0" placeholder="0" required />
                        <span class="input-group-text">/night</span>
                    </div>
                    <span asp-validation-for="PricePerNight" class="text-danger d-block"></span>
                    <small class="text-muted">Set the base price for one night stay</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="fas fa-align-left"></i> Description
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter detailed description of this room type including amenities, features, and highlights..."></textarea>
                    <small class="text-muted">Provide details about features, amenities, and what makes this room type special</small>
                </div>

                <div class="alert alert-warning border-0 mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Note:</strong> Once created, you can edit these details anytime from the room types management page.
                </div>
            </div>

            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <div class="d-flex gap-2">
                        <button type="reset" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i> Reset Form
                        </button>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Create Room Type
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Format currency input
        const priceInput = document.querySelector('input[name="PricePerNight"]');
        
        priceInput.addEventListener('blur', function() {
            if (this.value) {
                this.value = Math.round(parseFloat(this.value) / 1000) * 1000;
            }
        });

        // Form validation feedback
        const form = document.querySelector('form');
        form.addEventListener('submit', function(e) {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            form.classList.add('was-validated');
        });

        // Reset button functionality
        const resetBtn = document.querySelector('button[type="reset"]');
        resetBtn.addEventListener('click', function() {
            form.classList.remove('was-validated');
        });
    </script>
}
