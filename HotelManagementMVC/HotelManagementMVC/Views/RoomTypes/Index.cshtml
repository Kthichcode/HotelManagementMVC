@model List<BusinessObjects.Entities.RoomType>

@{
    ViewData["Title"] = "Room Types Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Room Types</h2>
        <a asp-action="Create" class="btn btn-primary">
            + Create New Type
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Price/Night</th>
                        <th>Description</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">@t.Name</td>
                            <td>@t.PricePerNight.ToString("N0") VND</td>
                            <td class="text-muted">@t.Description</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room type?');">
                                    <input type="hidden" name="id" value="@t.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
