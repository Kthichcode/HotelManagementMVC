@model HotelManagementMVC.Models.SearchRoomsViewModel

<h2>Search Available Rooms</h2>

<form asp-action="Search" method="post">
    <div style="margin-bottom:10px;">
        <label>Check-in</label><br />
        <input asp-for="CheckIn" type="date" />
        <span asp-validation-for="CheckIn" style="color:red;"></span>
    </div>

    <div style="margin-bottom:10px;">
        <label>Check-out</label><br />
        <input asp-for="CheckOut" type="date" />
        <span asp-validation-for="CheckOut" style="color:red;"></span>
    </div>


    <div style="margin-bottom:10px;">
        <label>Room Type (optional)</label><br />
        <select asp-for="RoomTypeId" asp-items="Model.RoomTypes">
            <option value="">-- All types --</option>
        </select>
    </div>



    <div style="margin-bottom:10px;">
        <label>Room Number (optional)</label><br />
        <input asp-for="RoomNumber" />
    </div>


   

    <div style="color:red; margin-bottom:10px;">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>

    <button type="submit">Search</button>
</form>

@if (Model.Results != null && Model.Results.Any())
{
    <hr />
    <h3>Available Rooms</h3>

    <table border="1" cellpadding="8" cellspacing="0">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Room Type</th>
                <th>Price/Night</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Results)
            {
                <tr>
                    <td>@r.RoomNumber</td>
                    <td>@r.RoomTypeName</td>
                    <td>@r.PricePerNight</td>
                    <td>
                        <!-- BOOK link: sang Step 6 -->
                        <a asp-controller="Bookings"
                           asp-action="Confirm"
                           asp-route-roomId="@r.RoomId"
                           asp-route-checkIn="@Model.CheckIn.ToString("yyyy-MM-dd")"
                           asp-route-checkOut="@Model.CheckOut.ToString("yyyy-MM-dd")">
                            Book
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="margin-top:15px;">No results yet. Please search.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
