@model HotelManagementMVC.Models.SearchRoomsViewModel

@{
    ViewData["Title"] = "Search Rooms";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4 text-center">Search Available Rooms</h2>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form asp-action="Search" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CheckIn" class="form-label">Check-in Date</label>
                            <input asp-for="CheckIn" class="form-control" type="date" />
                            <span asp-validation-for="CheckIn" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CheckOut" class="form-label">Check-out Date</label>
                            <input asp-for="CheckOut" class="form-control" type="date" />
                            <span asp-validation-for="CheckOut" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RoomTypeId" class="form-label">Room Type (Optional)</label>
                            <select asp-for="RoomTypeId" asp-items="Model.RoomTypes" class="form-select">
                                <option value="">-- All Types --</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RoomNumber" class="form-label">Room Number (Optional)</label>
                            <input asp-for="RoomNumber" class="form-control" placeholder="e.g. 101" />
                        </div>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0 ps-3">
                                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@err.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">Search Available Rooms</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Results != null && Model.Results.Count > 0)
{
    <hr class="my-5" />
    <h3 class="mb-3">Available Rooms (@Model.Results.Count)</h3>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th style="width:140px;">Image</th>
                    <th>Room Number</th>
                    <th>Type</th>
                    <th class="text-center" style="width:90px;">Max</th>
                    <th>Price / Night</th>
                    <th class="text-center" style="width:240px;">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var r in Model.Results)
                {
                    <tr>
                        <td class="align-middle">
                            @if (!string.IsNullOrWhiteSpace(r.ImageUrl))
                            {
                                <img src="@r.ImageUrl"
                                     style="width:120px;height:80px;object-fit:cover;border-radius:10px;border:1px solid #eee;" />
                            }
                            else
                            {
                                <div class="text-muted small">No image</div>
                            }
                        </td>

                        <td class="align-middle fw-bold">@r.RoomNumber</td>
                        <td class="align-middle">@r.RoomTypeName</td>
                        <td class="align-middle text-center">@r.MaxOccupancy</td>
                        <td class="align-middle text-success fw-bold">@r.PricePerNight.ToString("N0") VND</td>

                        <td class="text-center">
                            <a asp-controller="Rooms"
                               asp-action="Details"
                               asp-route-id="@r.RoomId"
                               class="btn btn-outline-primary btn-sm me-2">
                                View Details
                            </a>

                            <a asp-controller="Bookings"
                               asp-action="Confirm"
                               asp-route-roomId="@r.RoomId"
                               asp-route-checkIn="@Model.CheckIn.ToString("yyyy-MM-dd")"
                               asp-route-checkOut="@Model.CheckOut.ToString("yyyy-MM-dd")"
                               class="btn btn-success btn-sm px-4">
                                Book Now
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else if (Context.Request.Method == "POST")
{
    <div class="alert alert-warning text-center mt-4">
        No rooms found matching your criteria. Please try different dates.
    </div>
}
else
{
    <div class="alert alert-info text-center mt-4">
        Please enter check-in/check-out dates and click Search.
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
