@model HotelManagementMVC.Models.PaymentResultViewModel

<div class="card mt-5">
    <div class="card-header @(Model.Success ? "bg-success" : "bg-danger") text-white">
        <h2>Kết Quả Thanh Toán</h2>
    </div>
    <div class="card-body text-center">
        @if (Model.Success)
        {
            <h1 class="text-success mb-3"><i class="bi bi-check-circle-fill"></i> Thành Công!</h1>
            <p class="lead">Thanh toán của bạn đã được xử lý thành công.</p>
            <p><strong>Mã Đặt Phòng:</strong> @Model.OrderId</p>
            <p><strong>Mã Giao Dịch:</strong> @Model.TransactionId</p>
            <p><strong>Mô Tả:</strong> @Model.OrderDescription</p>

            <hr />
            <a asp-controller="Bookings" asp-action="Index" class="btn btn-primary">Xem Các Đặt Phòng Của Tôi</a>
        }
        else
        {
            <h1 class="text-danger mb-3"><i class="bi bi-x-circle-fill"></i> Thất Bại!</h1>
            <p class="lead">Đã có lỗi xảy ra khi xử lý thanh toán của bạn.</p>
            <p><strong>Mã Lỗi:</strong> @Model.VnPayResponseCode</p>
            <p>Vui lòng thử lại hoặc liên hệ với bộ phận hỗ trợ.</p>

            <hr />
            <a asp-controller="Rooms" asp-action="Search" class="btn btn-secondary">Thử Đặt Phòng Lại</a>
        }
    </div>
</div>
