@model HotelManagementMVC.Models.BookingConfirmViewModel

<h2>Xác Nhận Đặt Phòng</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Chi Tiết Đặt Phòng</h5>
        <div class="alert alert-info">
            <strong>Phòng:</strong> @Model.RoomNumber <br />
            <strong>Loại Phòng:</strong> @Model.RoomTypeName <br />
            <strong>Thời Gian:</strong> @Model.CheckIn.ToShortDateString() - @Model.CheckOut.ToShortDateString() <br />
            <strong>Số Đêm:</strong> @Model.TotalNights <br />
            <strong>Giá/Đêm:</strong> @Model.PricePerNight.ToString("N2") <br />
        </div>

        <h3 class="text-primary">Tổng Cộng: @Model.TotalAmount.ToString("N2")</h3>

        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="RoomId" />
            <input type="hidden" asp-for="CheckIn" />
            <input type="hidden" asp-for="CheckOut" />
            <input type="hidden" asp-for="PricePerNight" />
            <!-- Lưu ý: Tính lại tổng tiền ở server là an toàn hơn, nhưng việc truyền tham số giúp xác thực -->

            <div class="text-danger">@Html.ValidationSummary(true)</div>

            <button type="submit" class="btn btn-success btn-lg">Xác Nhận & Đặt Phòng</button>
            <a asp-controller="Rooms" asp-action="Search" class="btn btn-secondary btn-lg">Hủy</a>
        </form>
    </div>
</div>
