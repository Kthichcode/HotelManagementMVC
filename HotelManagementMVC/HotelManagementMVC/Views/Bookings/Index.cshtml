@model List<BusinessObjects.Entities.Booking>

<h2>Các Đặt Phòng Của Tôi</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Phòng</th>
            <th>Ngày Nhận Phòng</th>
            <th>Ngày Trả Phòng</th>
            <th>Tổng Số Tiền</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>
                    @foreach (var br in item.BookingRooms)
                    {
                        <span class="badge bg-secondary">@br.Room?.RoomNumber</span>
                    }
                </td>

                <td>@item.CheckInDate.ToShortDateString()</td>
                <td>@item.CheckOutDate.ToShortDateString()</td>
                <td>@item.TotalAmount.ToString("N0")</td>

                <!-- TRẠNG THÁI -->
                <td>
                    @switch (item.Status)
                    {
                        case BusinessObjects.Enums.BookingStatus.Pending:
                            <span class="badge bg-warning text-dark">Đang Chờ</span>
                            break;

                        case BusinessObjects.Enums.BookingStatus.Confirmed:
                            <span class="badge bg-info">Đã Xác Nhận</span>
                            break;

                        case BusinessObjects.Enums.BookingStatus.CheckedIn:
                            <span class="badge bg-primary">Đã Nhận Phòng</span>
                            break;

                        case BusinessObjects.Enums.BookingStatus.Completed:
                            <span class="badge bg-success">Hoàn Thành</span>
                            break;

                        case BusinessObjects.Enums.BookingStatus.Cancelled:
                            <span class="badge bg-danger">Đã Hủy</span>
                            break;

                        default:
                            <span class="badge bg-dark">Không Xác Định</span>
                            break;
                    }
                </td>

                <!-- HÀNH ĐỘNG -->
                <td>
                    @if (item.Status == BusinessObjects.Enums.BookingStatus.Pending
                                    || item.Status == BusinessObjects.Enums.BookingStatus.Confirmed)
                    {
                        <form asp-action="Cancel"
                              method="post"
                              style="display:inline"
                              onsubmit="return confirm('Bạn có chắc chắn không?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-sm btn-danger">Hủy</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
