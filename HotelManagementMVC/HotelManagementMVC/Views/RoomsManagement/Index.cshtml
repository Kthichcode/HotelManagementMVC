@model List<BusinessObjects.Entities.Room>

@{
    ViewData["Title"] = "Quản Lý Phòng";
}

<style>
    body {
        background: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .rooms-management-wrapper {
        max-width: 1600px;
        margin: 30px auto;
        padding: 0 20px;
    }

    .page-header {
        background: linear-gradient(135deg, #0066cc 0%, #3385d6 100%);
        color: white;
        padding: 30px 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(0, 102, 204, 0.2);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header h2 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header h2 i {
        font-size: 2.2rem;
    }

    .btn-create-room {
        background: white;
        color: #0066cc;
        padding: 12px 30px;
        border-radius: 50px;
        border: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn-create-room:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(255, 255, 255, 0.4);
        color: #0052a3;
    }

    .table-container {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
    }

    .table {
        margin: 0;
    }

    .table thead {
        background: linear-gradient(135deg, #0066cc 0%, #3385d6 100%);
        color: white;
    }

    .table thead th {
        padding: 20px;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: none;
    }

    .table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background: #f8f9ff;
        transform: scale(1.01);
        box-shadow: 0 2px 10px rgba(0, 102, 204, 0.1);
    }

    .table tbody td {
        padding: 20px;
        vertical-align: middle;
        border: none;
    }

    .room-image {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .room-image:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 15px rgba(0, 102, 204, 0.3);
    }

    .no-image-placeholder {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #0066cc 0%, #3385d6 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .room-number {
        font-weight: 700;
        color: #0066cc;
        font-size: 1.1rem;
    }

    .badge-room-type {
        background: linear-gradient(135deg, #0066cc 0%, #3385d6 100%);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .badge-status {
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .badge-success {
        background: #28a745;
        color: white;
    }

    .badge-warning {
        background: #ffc107;
        color: #333;
    }

    .badge-secondary {
        background: #6c757d;
        color: white;
    }

    .occupancy-info {
        color: #666;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .occupancy-info i {
        color: #0066cc;
    }

    .description-text {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-edit {
        background: #0066cc;
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-edit:hover {
        background: #0052a3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 102, 204, 0.3);
        color: white;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-delete:hover {
        background: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        color: white;
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        backdrop-filter: blur(5px);
    }

    .modal-container {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 900px;
        width: 90%;
        animation: slideDown 0.3s ease;
    }

    .modal-header-custom {
        background: linear-gradient(135deg, #0066cc 0%, #3385d6 100%);
        color: white;
        padding: 25px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header-custom h3 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .modal-close-btn {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        font-size: 2rem;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
    }

    .modal-close-btn:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: rotate(90deg);
    }

    .modal-body-custom {
        padding: 30px;
        text-align: center;
    }

    .modal-body-custom img {
        max-width: 100%;
        max-height: 70vh;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .modal-footer-custom {
        padding: 20px 30px;
        background: #f8f9fa;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .modal-footer-custom .btn {
        padding: 10px 25px;
        border-radius: 20px;
        font-weight: 600;
    }   
</style>

<div class="rooms-management-wrapper">
    <div class="page-header">
        <h2><i class="fas fa-door-open"></i> Quản Lý Phòng</h2>
        <a asp-action="Create" class="btn-create-room">
            <i class="fas fa-plus"></i> Tạo Phòng Mới
        </a>
    </div>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                        <tr>
                            <th width="10%">Hình Ảnh</th>
                            <th width="12%">Số Phòng</th>
                            <th width="15%">Loại Phòng</th>
                            <th width="12%">Trạng Thái</th>
                            <th width="10%">Sức Chứa</th>
                            <th width="23%">Mô Tả</th>
                            <th class="text-end" width="18%">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(r.ImageUrl))
                                    {
                                        <img src="@r.ImageUrl"
                                             class="room-image"
                                             alt="Phòng @r.RoomNumber"
                                             onclick="showImageModal('@r.ImageUrl', 'Phòng @r.RoomNumber')" />
                                    }
                                    else
                                    {
                                        <div class="no-image-placeholder">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td><span class="room-number">@r.RoomNumber</span></td>
                                <td>
                                    @if (r.RoomType != null)
                                    {
                                        <span class="badge-room-type">@r.RoomType.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                                <td>
                                    @if (r.Status == BusinessObjects.Enums.RoomStatus.Available)
                                    {
                                        <span class="badge-status badge-success">Sẵn Có</span>
                                    }
                                    else if (r.Status == BusinessObjects.Enums.RoomStatus.Maintenance)
                                    {
                                        <span class="badge-status badge-warning">Bảo Trì</span>
                                    }
                                    else
                                    {
                                        <span class="badge-status badge-secondary">@r.Status</span>
                                    }
                                </td>
                                <td>
                                    <span class="occupancy-info">
                                        <i class="fas fa-users"></i> @r.MaxOccupancy
                                    </span>
                                </td>
                                <td>
                                    <span class="description-text">
                                        @if (!string.IsNullOrEmpty(r.Description))
                                        {
                                            @(r.Description.Length > 50 ? r.Description.Substring(0, 50) + "..." : r.Description)
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có mô tả</span>
                                        }
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@r.Id" class="btn-edit">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa phòng này?');">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <button type="submit" class="btn-delete">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>
    </div>
</div>

<!-- Modal Hình Ảnh -->
<div id="imageModal" class="modal-overlay" style="display: none;">
    <div class="modal-container" style="max-width: 800px;">
        <div class="modal-header-custom">
            <h3 id="imageModalTitle">Hình Ảnh Phòng</h3>
            <button type="button" class="modal-close-btn" onclick="closeImageModal()">&times;</button>
        </div>
        <div class="modal-body-custom text-center">
            <img id="modalImage" src="" alt="Room" class="img-fluid rounded" style="max-height: 70vh;" />
        </div>
        <div class="modal-footer-custom">
            <button type="button" class="btn btn-secondary" onclick="closeImageModal()">Đóng</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showImageModal(imageUrl, title) {
            document.getElementById('modalImage').src = imageUrl;
            document.getElementById('imageModalTitle').textContent = title;
            document.getElementById('imageModal').style.display = 'flex';
        }

        function closeImageModal() {
            document.getElementById('imageModal').style.display = 'none';
        }

        // Đóng modal khi nhấn ra ngoài
        document.getElementById('imageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeImageModal();
            }
        });
    </script>
}
