@model HotelManagementMVC.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-user-plus"></i> Create New User
            </h4>
        </div>
        
        <form asp-action="Create" class="needs-validation" novalidate>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="alert alert-info border-0">
                    <i class="fas fa-info-circle"></i>
                    <strong>Information:</strong> Create a new user account for the hotel management system.
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Username" class="form-label fw-bold">
                            <i class="fas fa-user"></i> Username <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Enter username" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold">
                            <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">
                        <i class="fas fa-id-card"></i> Full Name <span class="text-danger">*</span>
                    </label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label fw-bold">
                            <i class="fas fa-lock"></i> Password <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="text-muted">Minimum 6 characters</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold">
                            <i class="fas fa-lock"></i> Confirm Password <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold">
                        <i class="fas fa-user-shield"></i> Role <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Role" class="form-select form-select-lg" required>
                        <option value="">-- Select Role --</option>
                        <option value="Customer">Customer - Regular hotel guest</option>
                        <option value="Staff">Staff - Front desk &amp; service staff</option>
                        <option value="Manager">Manager - Department manager</option>
                        <option value="Admin">Admin - System administrator</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                    <small class="text-muted">Select the appropriate role for this user</small>
                </div>

                <div class="alert alert-warning border-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Note:</strong> The user will receive their login credentials via email.
                </div>
            </div>

            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus"></i> Create User
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
