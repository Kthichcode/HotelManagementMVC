@model HotelManagementMVC.Models.EditUserViewModel

@{
    ViewData["Title"] = "Chỉnh Sửa Người Dùng";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-user-edit"></i> Chỉnh Sửa Người Dùng
            </h4>
        </div>

        <form asp-action="Edit" class="needs-validation" novalidate>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">
                        <i class="fas fa-id-card"></i> Họ Tên <span class="text-danger">*</span>
                    </label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold">
                        <i class="fas fa-user-shield"></i> Vai Trò <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Role" class="form-select form-select-lg" required>
                        <option value="Customer">Khách Hàng - Khách lưu trú thông thường</option>
                        <option value="Staff">Nhân Viên - Nhân viên tiếp tân & dịch vụ</option>
                        <option value="Manager">Quản Lý - Quản lý phòng ban</option>
                        <option value="Admin">Quản Trị Viên - Quản lý hệ thống</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="alert alert-warning border-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Lưu ý:</strong> Thay đổi vai trò sẽ ảnh hưởng ngay lập tức đến quyền của người dùng.
                </div>
            </div>

            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Lưu Thay Đổi
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
