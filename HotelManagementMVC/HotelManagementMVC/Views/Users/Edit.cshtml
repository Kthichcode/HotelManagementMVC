@model HotelManagementMVC.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-user-edit"></i> Edit User
            </h4>
        </div>
        
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">
                        <i class="fas fa-id-card"></i> Full Name <span class="text-danger">*</span>
                    </label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold">
                        <i class="fas fa-user-shield"></i> Role <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Role" class="form-select form-select-lg" required>
                        <option value="Customer">Customer - Regular hotel guest</option>
                        <option value="Staff">Staff - Front desk &amp; service staff</option>
                        <option value="Manager">Manager - Department manager</option>
                        <option value="Admin">Admin - System administrator</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="alert alert-warning border-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Note:</strong> Changing the role will affect user permissions immediately.
                </div>
            </div>

            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
