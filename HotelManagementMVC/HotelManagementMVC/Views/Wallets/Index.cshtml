@model BusinessObjects.Entities.Wallet

@{
    ViewData["Title"] = "My Wallet";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">My Wallet</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-muted">Account Holder</h5>
                    <p class="lead">@Model.User?.FullName</p>
                </div>
                <div class="col-md-6 text-end">
                    <h5 class="text-muted">Current Balance</h5>
                    <h2 class="text-success display-4">@Model.Balance.ToString("N0") VND</h2>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <small>Wallet ID: @Model.Id</small>
        </div>
    </div>
</div>
